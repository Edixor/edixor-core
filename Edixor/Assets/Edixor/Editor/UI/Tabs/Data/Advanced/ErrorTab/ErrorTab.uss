.error-tab-root {
    flex-direction: column;
    padding: 10px;
    margin: 10px;
    background-color: #2b2b2b;
    border-radius: 5px;
}

.error-title {
    font-size: 18px;
    font-weight: bold;
    color: #ff5555;
    margin-bottom: 10px;
}

.error-message {
    color: #dddddd;
    white-space: normal;
    unity-text-align: upper-left;
    margin-bottom: 15px;
}

#copy-button {
    unity-text-align: middle-center;
    background-color: #444;
    color: #ffffff;
}
